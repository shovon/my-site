extends blog

block styles
  link(rel='stylesheet', href='/css/article.css')

block prepend title
  | #{ page.title + " - "}

block content
  section.blog-content
    section
      article
        header
          h1= page.title
          p= moment(page.date).format('MMMM DD, YYYY')
        section!= typogr(page.html).typogrify()

        footer
          include mixins
          mixin disqus(disqusShortname)