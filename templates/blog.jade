extends layout

block styles
  link(rel='stylesheet', href='/css/blog.css')

block content
  section.blog-content
    h2 The Blog

    div
      each article in articles
        section
          article
            header
              h3
                a(href=article.url)= article.title
              p
                span= moment(article.date).format('MMMM DD, YYYY')
            section
              !{ typogr(article.intro).typogrify() }
              if article.hasMore
                p.text-align-right
                  a(href=article.url) Read more

    div
      nav
        if prevPage
          a(href=prevPage.url) « Newer
        else
          a(href='/archive') « Archives

        if nextPage
          a.prev(href=nextPage.url) Older »