extends layout

block styles
  link(rel='stylesheet', href='/css/home.css')

block content
  section
    //- TODO: having a container like that isn't very semantic
    hgroup
      h1 Salehen Shovon Rahman
      nav
        ul
          for social in socials
            li(data-tooltip, title='#{social.text}', data-background='#{social.color}')
              //- TODO: remove the class for this one.
              a.social(href='#{social.url}', style='background-color: #{social.color}', target='_blank')
                span(class='symbol')
                  !=social.symbol
      p
        | I'm a 
        strong programmer
        |, and I do a bunch of stuff on the Internet.
        | Although, I'm mostly programming, 
        strong I also produce electronic music
        |. My favourite genre is progressive house. 
        strong Friend me up
        |  on the Internet social sphere. And most importantly, do not be
        | afraid to 
        strong say hi
        |. I'm a friendly guy.

block scripts
  script(src="/bower_components/jquery/jquery.js")
  script(src="/bower_components/tooltipster/js/jquery.tooltipster.js")
  script(src="/js/home.js")
  script(src='/js/layout.js')