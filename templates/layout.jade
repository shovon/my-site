!!! 5
html(lang='en')
  //- TODO: minify the resulting HTML

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    //- TODO: check to see if the site is mobile-ready.
    meta(name='viewport', content='width=device-width')
    title
      block title
        = locals.name
    link(
      rel='alternate',
      href=locals.url+'/feed.xml',
      type='application/rss+xml',
      title=locals.description)
    block styles
      //- TODO: Only one CSS file should be loaded.
      link(rel="stylesheet", href="/extra_dependencies/tooltipster/tooltipster.css")
      link(rel='stylesheet', href='/css/layout.css')

    //- TODO: add analytics

  body
    block header
      header
        section
          h2
            a(href='/') #{ locals.name }
          nav
            ul
              //- TODO: maybe soft code these?
              li
                a(href='/') Home
              li
                a(href='/blog/') Blog

    block content

    footer
      block footer
        section
          div
            section
              h3 Recent Posts
              ul
                for article in articles
                  li
                    span
                      a(href='#{article.url}')= article.title
                    span= moment(article.date).format('MMMM DD, YYYY')
          //-
            section.container.copy.text-align-center
              p
                | &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; 
                | designed by 
                a(href='https://twitter.com/shovon_rahman', target='_blank') 
                  | @shovon_rahman
                |  &mdash; powered by&nbsp;
                a(href='https://github.com/jnordberg/wintersmith', target="_blank") Wintersmith
                //- please leave the "designed by" if you use the design, as well
                //- as "powered by" if you use the site generator.
    
    block scripts
      //- TODO concatenate and minify.
      script(src="/bower_components/jquery/jquery.js")
      script(src="/extra_dependencies/tooltipster/jquery.tooltipster.js")
      script(src="/js/layout.js")