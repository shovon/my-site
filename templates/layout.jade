!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title
      block title
        = locals.name
    link(
      rel='alternate',
      href=locals.url+'/feed.xml',
      type='application/rss+xml',
      title=locals.description)
    block styles
      link(rel='stylesheet', href='/css/layout.css')
  body(class=bodyclass)
    block header
      header.site-header
        hgroup.container
          h1 #{ locals.owner }
          nav
            ul
              for social in env.config.home.socials
                li(data-tooltip, title=social.text, data-background=social.color)
                  span(class='symbol')
                    !=social.symbol

    div#content
      div.content-wrap
        block content
    footer
      div.content-wrap
        block footer
          section.container.copy.text-align-center
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
    
    block scripts